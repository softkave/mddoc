{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build",
    "esModuleInterop": true,
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "global.d.ts"]
}
